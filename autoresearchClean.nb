   RowBox[{
    RowBox[{"filterWords", "[", "words_", "]"}], ":=", 
    RowBox[{"With", "[", 
     RowBox[{
      RowBox[{"{", 
       RowBox[{"pos", "=", 
        RowBox[{"Association", "@@", 
         RowBox[{"(", 
          RowBox[{
           RowBox[{
            RowBox[{"(", 
             RowBox[{"#", "->", 
              RowBox[{"WordData", "[", 
               RowBox[{"#", ",", "\"\<PartsOfSpeech\>\""}], "]"}]}], ")"}], 
            "&"}], "/@", "words"}], ")"}]}]}], "}"}], ",", 
      "\[IndentingNewLine]", "\t", 
      RowBox[{"Select", "[", 
       RowBox[{
        RowBox[{"Keys", "[", "pos", "]"}], ",", 
        RowBox[{
         RowBox[{
          RowBox[{"ContainsAny", "[", 
           RowBox[{
            RowBox[{"pos", "[", "#", "]"}], ",", 
            RowBox[{"{", 
             RowBox[{"\"\<Noun\>\"", ",", "\"\<Adjective\>\""}], "}"}]}], 
           "]"}], "&&", 
          RowBox[{"ContainsNone", "[", 
           RowBox[{
            RowBox[{"pos", "[", "#", "]"}], ",", 
            RowBox[{"{", 
