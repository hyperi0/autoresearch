Cell[BoxData[
 RowBox[{
  RowBox[{"(*", " ", 
   RowBox[{"recursively", " ", "gather", " ", "summary", " ", "links"}], " ", 
   "*)"}], "\[IndentingNewLine]", 
  RowBox[{
   RowBox[{
    RowBox[{"getLinkRules", "[", 
     RowBox[{"article_", ",", "1"}], "]"}], ":=", 
    RowBox[{
     RowBox[{
      RowBox[{"article", "->", "#"}], "&"}], "/@", 
     RowBox[{"getSummaryLinks", "[", "article", "]"}]}]}], "\n", 
   RowBox[{
    RowBox[{"getLinkRules", "[", 
     RowBox[{"article_", ",", "n_"}], "]"}], ":=", 
    RowBox[{
     RowBox[{"With", "[", 
      RowBox[{
       RowBox[{"{", 
        RowBox[{"links", "=", 
         RowBox[{"getSummaryLinks", "[", "article", "]"}]}], "}"}], ",", 
       "\[IndentingNewLine]", "\t", 
       RowBox[{"Join", "[", 
        RowBox[{
         RowBox[{
          RowBox[{
           RowBox[{"article", "->", "#"}], "&"}], "/@", "links"}], ",", 
         RowBox[{
          RowBox[{
           RowBox[{"getLinkRules", "[", 
            RowBox[{"#", ",", 
             RowBox[{"n", "-", "1"}]}], "]"}], "&"}], "/@", "links"}]}], 
        "]"}]}], "]"}], "//", "Flatten"}]}]}]}]], "Code",
