   RowBox[{
    RowBox[{"getLinksGraph", "[", "linkRules_", "]"}], ":=", 
    RowBox[{"Graph", "[", 
     RowBox[{"linkRules", ",", 
      RowBox[{"VertexLabels", "->", 
       RowBox[{"Placed", "[", 
        RowBox[{"\"\<Name\>\"", ",", "Tooltip"}], "]"}]}]}], "]"}]}], "\n", 
   RowBox[{
    RowBox[{"showPageRankGraph", "[", 
     RowBox[{"graph_", ",", 
      RowBox[{"scale_", ":", "3"}]}], "]"}], ":=", 
